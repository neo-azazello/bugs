{% if flash.getMessage('error') %}

<div class="alert alert-icon alert-danger" role="alert">
  <i class="fe fe-alert-triangle mr-2" aria-hidden="true"></i>  {{ flash.getMessage('error') | first}}
</div>

{% endif %}

{% if flash.getMessage('success') %}

<div class="alert alert-icon alert-success" role="alert">
  <i class="fe fe-check mr-2" aria-hidden="true"></i>  {{ flash.getMessage('success') | first}}
</div>

{% endif %}