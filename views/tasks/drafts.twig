{% extends 'templates/app.twig' %}

{% block content %} 

    <div class="container">
          <div class="page-header">
              <h1 class="page-title">
                Draft tasks
              </h1>
            </div> 
            
            {% include 'templates/partials/flash.twig' %} 
            
            <div class="row row-cards row-deck">
              <div class="col-12">
                <div class="card">
                  <div class="table-responsive">
                    <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
                     
                      <thead>
                        <tr>
                          <th>Task title</th>
                          <th class="text-center">Task type</th>
                          <th>Assigned</th>
                          <th>Project</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      
                      <tbody>
                      
                      {% if drafts %}   
                        
                        {% for draft in drafts %}
                            <tr>
                              
                              <td>
                                <div><a href="{{base_url()}}/view/{{ draft.taskid }}" >{{ draft.tasktitle }}</a></div>
                                <div class="small text-muted">
                                 {{ draft.created_at |date("d.m.Y H:i")}}
                                </div>
                              </td>
                              
                              <td class="text-center">
                                <span class="badge badge-{{ draft.tasktypecolor }}">{{ draft.tasktypename }}</span>
                              </td>
                              
                              <td>
                                <div class="assignee">{{ draft.assignedUsers }}</div>
                              </td>
                              
                              <td>
                                <div>{{ draft.projectname }}</div>
                                <div class="small text-muted">
                                 {{ draft.projectsartdate |date("d.m.Y")}}
                                </div>
                              </td>
                              
                              <td>
                                  <span class="status-icon bg-{{ draft.statuscolor }}"></span> {{ draft.statusname }}
                              </td>
                              
                              <td>
                                <a href="{{base_url()}}/view/{{ draft.taskid }}" class="btn btn-secondary btn-sm">Open</a>
                                {% if auth.user.is_admin == "true" %} 
                                  <a href="{{base_url()}}/edit/{{ draft.taskid }}" class="btn btn-success btn-sm"><i class="fe fe-edit"></i></a>
                                  <a onclick="return confirm('Are you shure?');" href="{{base_url()}}/delete/{{ draft.taskid }}" class="btn btn-danger btn-sm"><i class="fe fe-trash"></i></a>
                                {% endif %}
                              </td>
                            </tr>
                        {% endfor %}
                        
                    {% else %}
                      
                      <tr>
                        <td class="text-center" colspan="7"> No draft tasks for now.</td>
                      </tr>
                      
                    {% endif %}
                      
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              
              
              
              
              
            </div>
          </div>

{% endblock %}