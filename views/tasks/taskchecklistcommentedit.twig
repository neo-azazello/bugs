<div class="modal fade" id="editComment" tabindex="-1" data-keyboard="false"  data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-white bg-primary">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Comment </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> </button>
            </div>
            <form action="{{ path_for('editnewtaskcheklistcomment') }}" method="post" autocomplete="off">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 simple-mde">
                            <div class="form-group">
                                <textarea rows="3" class="form-control textarea" name="commenttext"
                                    id="editCommentMde">{{text.commenttext}}</textarea>
                                
                                <script>
                                    var simplemde = new SimpleMDE({
                                        element: document.getElementById("editCommentMde"),
                                        forceSync: true,
                                        autofocus: true,
                                        showIcons: ["code", "table"],
                                        spellChecker: false
                                    });
                                </script>

                            </div>
                        </div>

                        <input type="hidden" name="id" value="{{id}}">
                        <input type="hidden" name="taskid" value="{{text.taskid}}">
                        <input type="hidden" name="checklistid" value="{{text.checklistid}}">

                    </div>
                </div>
                <div class="modal-footer">
                    <a href="{{base_url()}}/deletechecklistcomment/{{id}}" class="btn btn-danger pull-left" onclick="return confirm('Are you sure you want to delete this comment?');">Delete Comment</a>
                    <button type="submit" class="btn btn-primary">Save Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>